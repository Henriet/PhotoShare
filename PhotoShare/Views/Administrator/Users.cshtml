@{
    ViewBag.Title = "Users";
}
@model List<PhotoShare.Domain.User>
<h2>Users</h2>

@if (Model != null)
{
    if (Model.Any())
    {
        <table>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(user.Name + " " + user.Surname, "UserProfile", "User", new { userName = user.Name}, null)
                    </td>
                    <td>
                        @Html.ActionLink("Delete User", "DeleteUser", "Administrator", new{id = user.Id}, null)
                    </td>
                </tr>
            }
        </table>
    }
}
