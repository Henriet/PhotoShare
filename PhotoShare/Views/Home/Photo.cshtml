@using PhotoShare.Models
@model IEnumerable<PhotoShare.Models.Photo>
 
@{
    ViewBag.Title = "Index";
}
 
<h2>Мои изображения</h2>
 
<p>
    @Html.ActionLink("Добавить изображение", "Create")
</p>
<table>
    <tr>
        <th>Название</th>
        <th>Картинка</th>
    </tr>
 
@foreach (var item in Model) {
    <tr>
        <td>
            
            @{
                Photo item1 = item;
            }
            @Html.DisplayFor(modelItem => item1 != null ? item1.Name : null)
        </td>
        <td>
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," 
                                + Convert.ToBase64String(item.Image) + "\" />")
        </td>
    </tr>
}
 
</table>