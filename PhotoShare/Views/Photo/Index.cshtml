@using System.Web.UI.WebControls
@model PhotoShare.Models.PhotoModel
@{
    ViewBag.Title = "Add photo";
}
<script type="text/javascript" src="~/Scripts/DropZone.js"></script>

<p>Для добавления фотографии нажмите кнопку "Выбрать файл" или перетащите фото.</p>
<p>Так же вы можете вставить ссылку на Интернет-источник для загрузки изображения.</p>
@using (Html.BeginForm("Index", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="dropzone">
        <input name="file" type="file" />
    </div>

    <div>
        @Html.TextBox(Model.UrlPhotoPath, "", new { PlaceHolder = "Url"})
    </div>
    
    @*
    <form>
        @Html.TextBox(Model.Description, "", new { PlaceHolder = "Описание"})
    </form>*@
    <p>
        <input type="submit" value="Добавить фото">
    </p>
}



